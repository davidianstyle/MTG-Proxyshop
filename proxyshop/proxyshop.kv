#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Gradient kivy_gradient.Gradient
#:import get_font proxyshop.gui.get_font
#:import HoverButton proxyshop.gui.HoverButton
#:import Thread threading.Thread
<TabbedPanelHeader>
    cols: 5

<ProxyshopPanels>:
    orientation: "vertical"
    AppTabs:
        do_default_tab: False
        tab_width: 120
        tab_height: 30
        tab_spacing: 0
        padding: app.cont_padding
        canvas:
            Color:
                rgb: get_color_from_hex('#2e2e2e')
            Rectangle:
                size: self.size
                pos: self.pos
        ProxyshopTab:
            text: "Render Cards"
            spacing: 0
            ProxyshopTabContainer:
                id: container
                orientation: "vertical"
                padding: 0
                spacing: 0
                SettingsModule:
                    cols: 5
                    rows: 2
                    padding: [2,3,2,1]
                    spacing: [1,2]
                    size_hint: (1, .4)
                    canvas:
                        Color:
                            rgba: get_color_from_hex("#000000")
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    SettingButton:
                        name: "auto_set_symbol"
                        text: "Auto Set Symbol"
                        font_size: 16
                        state: self.initial_state(app)
                        on_state: self.on_toggle(app)
                    SettingButton:
                        name: "auto_symbol_size"
                        text: "Auto Symbol Size"
                        font_size: 16
                        state: self.initial_state(app)
                        on_state: self.on_toggle(app)
                    SettingButton:
                        name: "fill_symbol"
                        text: "Auto Symbol Fill"
                        font_size: 16
                        state: self.initial_state(app)
                        on_state: self.on_toggle(app)
                    SettingButton:
                        name: "save_JPEG"
                        text: "JPEG Saving"
                        font_size: 16
                        state: self.initial_state(app)
                        on_state: self.on_toggle(app)
                    HoverButton:
                        id: rend_targ_btn
                        text: "Render Target"
                        font_size: 18
                        on_press: Thread(target=app.render_target, daemon=True).start()
                        background_color: get_color_from_hex("#376aa3")
                    SettingButton:
                        name: "no_reminder"
                        text: "No Reminder Text"
                        font_size: 16
                        state: self.initial_state(app)
                        on_state: self.on_toggle(app)
                    SettingButton:
                        name: "no_flavor"
                        text: "No Flavor Text"
                        font_size: 16
                        state: self.initial_state(app)
                        on_state: self.on_toggle(app)
                    SettingButton:
                        name: "manual_edit"
                        text: "Manual Edit Step"
                        font_size: 16
                        state: self.initial_state(app)
                        on_state: self.on_toggle(app)
                    SettingButton:
                        text: "Skip Failed Cards"
                        name: "skip_failed"
                        font_size: 16
                        state: self.initial_state(app)
                        on_state: self.on_toggle(app)
                    HoverButton:
                        id: rend_all_btn
                        text: "Render All"
                        font_size: 18
                        on_press: Thread(target=app.render_all, daemon=True).start()
                        background_color: get_color_from_hex("#376aa3")
                TemplateModule:
                    tab_pos: "top_mid"
                    do_default_tab: False
                    tab_spacing: 0
                    tab_height: 26
                    size_hint_y: 2
                    pos: -5,0
        CreatorTab:
            text: "Custom Creator"

<TabbedPanelItem>:
    pos: 0,0
    spacing: 0
    orientation: "vertical"

<TemplateList>:
    padding: 0
    spacing: 0
    size_hint: (1,None)
    height: self.minimum_height
    cols: 1

<TemplateView>:
    bar_width: 4
    always_overscroll: False
    do_scroll_x: False
    size_hint: (1,1)
    scroll_wheel_distance: 40

<TemplateButton>:
    on_press: app.select_template(self)
    size_hint: (1,None)
    height: 30
